<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="ring" android:useLevel="false">
            <solid android:color="#e0e0e0"/> <!-- Background color for the progress bar -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270">
            <shape android:shape="ring" android:useLevel="true">
                <solid android:color="@color/red"/> <!-- Foreground color for the progress bar -->
            </shape>
        </rotate>
    </item>
</layer-list>
