<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ViewPager2 for Image Swiping -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/imageViewPager"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="8dp" />

        <!-- Indicator for ViewPager2 -->
        <LinearLayout
            android:id="@+id/indicatorLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:padding="4dp">
            <!-- Indicators will be added programmatically -->
        </LinearLayout>


        <!-- Title -->
        <TextView
            android:id="@+id/productTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="0dp"
            android:text="product_title" />

        <!-- Price -->

        <!-- Highlights -->
        <TextView
            android:id="@+id/productPriceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="product_price"
            android:textColor="@color/navy_blue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Highlights"
            android:paddingTop="16dp"/>

        <!-- Highlight 1 -->
        <TextView
            android:id="@+id/highlight1TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="highlight1" />

        <!-- Highlight 2 -->
        <TextView
            android:id="@+id/highlight2TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="highlight2" />

        <!-- Specifications Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Specifications"
            android:paddingTop="16dp"/>

        <!-- Specifications List (Dynamic Content) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/specificationsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

        <!-- Placeholder for additional dynamic API content -->
        <LinearLayout
            android:id="@+id/dynamicContentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">
            <!-- Dynamic API content will be programmatically added here -->
        </LinearLayout>

    </LinearLayout>
</ScrollView>
